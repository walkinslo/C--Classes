<Application x:Class="WpfApp2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp2"
             xmlns:viewModels="clr-namespace:WpfApp2.ViewModels"
             xmlns:views="clr-namespace:WpfApp2.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:StoreScreen}">
            <views:StoreScreen/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:HomeScreenViewModel}">
            <views:HomeScreen/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:AddChairScreen}">
            <views:AddChairScreen/>
        </DataTemplate>
    </Application.Resources>
</Application>
